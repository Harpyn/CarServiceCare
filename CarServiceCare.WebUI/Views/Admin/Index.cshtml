@model CarServiceCare.Core.ViewModels.AdminViewModel
@using CarServiceCare.Core.Enums
@{
    ViewBag.Title = "Index";
}

<!------------------------------------------------------------ SEKCE VOZIDLA ------------------------------------------------------->
<h2>Auta - Přehled vozidel</h2>

<p>
    @Html.ActionLink("Vytvořit nové", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Cars.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cars.First().CarBrand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cars.First().Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cars.First().FuelType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cars.First().CubicCapacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cars.First().Power)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cars.First().Kilometer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cars.First().Price)
        </th>

        <th></th>
    </tr>

    @foreach (var carItem in Model.Cars)
    {

        <tr>
            <td>
                <img class="img-thumbnail" style="height:50px" src="~/Content/CarImages/@carItem.Photo" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => carItem.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => carItem.CarBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => carItem.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => carItem.FuelType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => carItem.CubicCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => carItem.Power)
            </td>
            <td>
                @Html.DisplayFor(modelItem => carItem.Kilometer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => carItem.Price)
            </td>
            <td>
                @Html.ActionLink("Upravit", "Edit", new { id = carItem.Id }) |
                @Html.ActionLink("Smazat", "Delete", new { id = carItem.Id })
            </td>
        </tr>
    }


</table>

<!------------------------------------------------------------ SEKCE POJIŠTĚNÍ ------------------------------------------------------->

<h2 style="margin-top:50px">Pojištění - Seznam pojištění</h2>

<p>
    @Html.ActionLink("Vytvořit nové", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Cars.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarInsurances.First().InsuranceType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarInsurances.First().InsuranceCompany)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarInsurances.First().ValidTo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarInsurances.First().Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarInsurances.First().Note)
        </th>
        <th></th>
    </tr>

    @foreach (var carInsuranceItem in Model.CarInsurances)
    {
        <tr>
            <td>
                <img class="img-thumbnail" style="height:50px" src="~/Content/CarInsuranceImages/@carInsuranceItem.Photo" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => carInsuranceItem.Car.Name)
            </td>
            <td>
                @carInsuranceItem.InsuranceType.GetDisplayName()
            </td>
            <td>
                @carInsuranceItem.InsuranceCompany.GetDisplayName()
            </td>
            <td>
                @Html.DisplayFor(modelItem => carInsuranceItem.ValidTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => carInsuranceItem.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => carInsuranceItem.Note)
            </td>
            <td>
                @Html.ActionLink("Upravit", "Edit", new { id = carInsuranceItem.Id }) |
                @Html.ActionLink("Smazat", "Delete", new { id = carInsuranceItem.Id })
            </td>
        </tr>
    }


</table>