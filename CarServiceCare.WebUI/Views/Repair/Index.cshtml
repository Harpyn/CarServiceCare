@model IEnumerable<CarServiceCare.Core.Models.Repair>

@{
    ViewBag.Title = "Opravy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Opravy - Seznam oprav</h2>

<p>
    @Html.ActionLink("Založit novou", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RepairType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstimatedPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Photo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RepairType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstimatedPrice)
        </td>
        <td>
            @Html.ActionLink("Upravit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Smazat", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
